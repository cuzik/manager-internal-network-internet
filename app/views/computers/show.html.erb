<div class="card mb-3 bg-dark text-light">
  <div class="card-header">
    <%= icon('fas','home', class: 'fa-fw h2') %>
    <span class="h4">
      <%= t('.title', computer_name: @computer.name) %>
    </span>
    <%= link_to(t('.delete'), @computer, method: :delete, class: "btn btn-danger float-right") %>
  </div>
  <div class="card-body">
    <%= form_with(model: @computer, local: true) do |form| %>
      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:name) %>
            <%= form.text_field(:name, disabled: true, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:mac_address) %>
            <%= form.text_field(:mac_address, autofocus: true, class: "form-control", disabled: true) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:ip) %>
            <%= form.text_field(:ip, autofocus: true, class: "form-control", disabled: true) %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:room_id) %>
            <%= form.select(:room_id, current_user.account.rooms.collect { |room| [room.name, room.id] }, {}, class: "form-control", disabled: true) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:switch_id) %>
            <%= form.select(:switch_id, current_user.account.switches.collect { |switch| [switch.name, switch.id] }, {}, class: "form-control", disabled: true) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:port_id) %>
            <%= form.select(:port_id, Port.all.collect { |port| [port.number, port.id] }, {}, class: "form-control", disabled: true) %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label(:owner) %>
            <%= form.check_box(:owner, disabled: true) %>
          </div>
        </div>
      </div>

      <div class="float-right">
        <%= link_to(t('.back'), computers_path, class: "btn btn-primary") %>
        <%= link_to(t('.edit'), edit_computer_path(@computer), class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>
