<%= form_with(model: port, local: true) do |form| %>

  <div class="form-group row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label(:number) %>
        <%= form.number_field(:number, autofocus: true, class: "form-control") %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label(:switch_id) %>
        <%= form.select(:switch_id, current_user.account.switches.collect { |switch| [switch.name, switch.id] }, {}, class: "form-control") %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
      <div class="form-group">
        <div class="checkbox">
          <%= form.label(:editable) %>
          <%= form.check_box(:editable) %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <div class="checkbox">
          <%= form.label(:enabled) %>
          <%= form.check_box(:enabled) %>
        </div>
      </div>
    </div>
  </div>
  <div class="float-right">
    <%= link_to(t('.back'), :back, class: "btn btn-primary") %>
    <%= form.submit !port.number.zero? ? t('.edit.confirm') : t('.new.confirm'), class:"btn btn-success" %>
  </div>
<% end %>
