<%= form_with(model: port, local: true) do |form| %>


  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="checkbox">
      <%= form.label :editabled %>
      <%= form.check_box :editabled %>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox">
      <%= form.label :enabled %>
      <%= form.check_box :enabled %>
    </div>
  </div>

  <div class="float-right">
    <% if !port.number.zero? %>
      <%= link_to(t('.back'), port_path(port), class: "btn btn-primary") %>
      <%= form.submit t('.edit.confirm'), class:"btn btn-success" %>
    <% else %>
      <%= link_to(t('.back'), switches_path, class: "btn btn-primary") %>
      <%= form.submit t('.new.confirm'), class:"btn btn-success" %>
    <% end %>
  </div>
<% end %>
