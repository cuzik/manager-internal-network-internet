<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','ethernet', t('.title', port_number: @port.number), class: 'fa-fw h2 mb-0') %>
    <%= link_to(t('.delete'), @port, method: :delete, class: "btn btn-danger float-right") %>
  </div>
  <div class="card-body">
    <%= form_with(model: @port, local: true) do |form| %>

      <div class="form-group row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label(:number) %>
        <%= form.number_field(:number, class: "form-control", disabled: true) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label(:switch_id) %>
        <%= form.select(:switch_id, current_user.account.switches.collect { |switch| [switch.name, switch.id] }, {}, class: "form-control", disabled: true) %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
      <div class="form-group">
        <div class="checkbox">
          <%= form.label(:editable) %>
          <%= form.check_box(:editable, disabled: true) %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <div class="checkbox">
          <%= form.label(:enabled) %>
          <%= form.check_box(:enabled, disabled: true) %>
        </div>
      </div>
    </div>
  </div>

      <div class="float-right">
        <%= link_to(t('.back'), params[:back_to_swith] == 'true' ? @port.switch : ports_path(), class: "btn btn-primary") %>
        <%= link_to(t('.edit'), edit_port_path(@port), class: "btn btn-primary") %>
      </div>
    <% end %>

  </div>
</div>
