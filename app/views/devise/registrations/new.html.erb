<div class="card card-register mx-auto mt-5">
  <div class="card-header">
    <%= icon('fas','user-plus', class: 'fa-fw h2 mb-0') %>
    <span class="h4"><%= t('.sign_up') %></span>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>

      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:account) %>
            <%= form.text_field(:account, autofocus: true, autocomplete: "account_name", class: "form-control") %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:email) %>
            <%= form.email_field(:email, autocomplete: "email", class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:name) %>
            <%= form.text_field(:name, autocomplete: "name", class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:cpf) %>
            <%= form.text_field(:cpf, autocomplete: "cpf", class: "form-control") %>
          </div>
        </div>
      </div>


      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label(:password) %>
            <%= form.password_field(:password, autocomplete: "new-password", class: "form-control") %>
            <small><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          </div>
          </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label(:password_confirmation) %>
            <%= form.password_field(:password_confirmation, autocomplete: "new-password", class: "form-control") %>
          </div>
        </div>
      </div>

      <%= form.submit(t('.sign_up'), class: "btn btn-primary btn-block") %>
    <% end %>
  </div>
  <div class="card-footer clearfix small z-1">
    <%= render("devise/shared/links") %>
  </div>
</div>
