<%= form_with(model: user, url: account_users_path, local: true) do |form| %>
  <%= render("messages/errors_messages", record: user) %>

  <div class="form-group row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:name) %>
        <%= form.text_field(:name, class: "form-control", autofocus: true) %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:email) %>
        <%= form.text_field(:email, class: "form-control") %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:cpf) %>
        <%= form.text_field(:cpf, class: "form-control") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label(:password) %>
        <%= form.text_field(:password, class: "form-control") %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label(:owner) %>
        <%= form.check_box(:owner) %>
      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to(t('.back'), :back, class: "btn btn-primary") %>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
