<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','user-astronaut', t('.title', user_name: @user.name), class: 'fa-fw h2 mb-0') %>
    <%= link_to(t('.delete'), account_user_path(@user), method: :delete, class: "btn btn-danger float-right") %>
  </div>

  <div class="card-body">
    <%= render("messages/notices", notice: notice) %>

    <%= form_with(model: @user, url: account_user_path, local: true) do |form| %>
      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:email) %>
            <%= form.text_field(:email, class: "form-control", disabled: true) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:name) %>
            <%= form.text_field(:name, class: "form-control", disabled: true) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:cpf) %>
            <%= form.text_field(:cpf, class: "form-control", disabled: true) %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label(:owner) %>
            <%= form.check_box(:owner, disabled: true) %>
          </div>
        </div>
      </div>

      <div class="float-right">
        <%= link_to(t('.back'), account_users_path(), class: "btn btn-primary") %>
        <%= link_to(t('.edit'), edit_account_user_path(@user), class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>
