<div class="col-xl-3 col-sm-6 mb-3">
  <div class="card text-white bg-primary o-hidden h-100">
    <div class="card-body">
      <div class="card-body-icon">
        <%= icon('fab','sith', class: 'fa-fw') %>
      </div>
      <div class="mr-5"><%= t('.card.name', switch_name: switch.name) %></div>
    </div>
    <%=link_to(switch, class: 'card-footer text-white clearfix small z-1') do%>
      <span class="float-left"><%= t('.card.details') %></span>
      <span class="float-right">
        <%= icon('fas','angle-right') %>
      </span>
    <% end %>
  </div>
</div>
