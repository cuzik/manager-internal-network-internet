<%= form_with(model: switch, local: true) do |form| %>

  <div class="form-group">
    <div class="form-row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :mac_address %>
          <%= form.text_field :mac_address, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to(t('.back'), switches_path, class: "btn btn-primary") %>
    <% if switch.name.present? %>
      <%= form.submit t('.edit.confirm'), class:"btn btn-success" %>
    <% else %>
      <%= form.submit t('.new.confirm'), class:"btn btn-success" %>
    <% end %>
  </div>
<% end %>
