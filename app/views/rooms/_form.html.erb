<%= form_with(model: room, local: true) do |form| %>

  <div class="form-group row">
    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to(t('.back'), :back, class: "btn btn-primary") %>
    <%= form.submit room.name.present? ? t('.edit.confirm') : t('.new.confirm'), class:"btn btn-success" %>
  </div>
<% end %>
