<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','user-shield', t('.title'), class: 'fa-fw h2 mb-0') %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
          <div class="card-header">
            <%= icon('fas', 'user-astronaut', class: 'fa-fw h5 mb-0') %>
            <%= t('.card.users.title') %>
          </div>
          <div class="card-body">
            <div class="card-body-icon">
              <%= icon('fas','user-astronaut', class: 'fa-fw') %>
            </div>
            <div class="mr-5"><%= t('.card.count', count: @users.count) %></div>
          </div>
          <%=link_to(account_users_path, class: 'card-footer text-white clearfix small z-1') do%>
            <span class="float-left"><%= t('.card.details') %></span>
            <span class="float-right">
              <%= icon('fas','angle-right') %>
            </span>
          <% end %>
        </div>
      </div>

      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
          <div class="card-header">
            <%= icon('fas','desktop', class: 'fa-fw h5 mb-0') %>
