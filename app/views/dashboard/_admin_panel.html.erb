            <div class="card-body-icon">
              <%= icon('fas','laptop-code', class: 'fa-fw') %>
            </div>
            <div class="mr-5"><%= t('.card.count', count: @computers.count) %></div>
          </div>
          <%=link_to(computers_path, class: 'card-footer text-white clearfix small z-1') do%>
            <span class="float-left"><%= t('.card.details') %></span>
            <span class="float-right">
              <%= icon('fas','angle-right') %>
            </span>
          <% end %>
        </div>
      </div>

