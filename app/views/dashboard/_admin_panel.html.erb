            <%= icon('fas', 'network-wired', class: 'fa-fw h5 mb-0') %>
            <%= t('.card.switches.title') %>
          </div>
          <div class="card-body">
            <div class="card-body-icon">
              <%= icon('fas','network-wired', class: 'fa-fw') %>
