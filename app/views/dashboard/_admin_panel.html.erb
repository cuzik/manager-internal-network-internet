<div class="card mb-3 bg-dark text-light">
  <div class="card-header">
    <%= icon('fas','home', class: 'fa-fw h2') %>
    <span class="h4"> <%= t('.title') %> </span>
  </div>
  <div class="card-body">
    <div class="row">

      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
