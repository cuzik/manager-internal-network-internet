<div class="col-xl-3 col-sm-6 mb-3">
  <div class="card text-dark bg-white o-hidden h-100">
    <div class="card-header">
      <%= icon('fas', 'igloo', t('.card.title'), class: 'fa-fw h5 mb-0') %>
    </div>
    <div class="card-body">
      <div class="card-body-icon">
        <%= icon('fas', 'igloo', class: 'fa-fw') %>
      </div>
      <div class="mr-5"><%= t('.card.name', room_name: room.name) %></div>
    </div>
    <%=link_to(room_network_manager_path(room), class: 'card-footer text-dark clearfix small z-1') do%>
      <span class="float-left"><%= t('.card.management') %></span>
      <span class="float-right">
        <%= icon('fas', 'angle-right') %>
      </span>
    <% end %>
  </div>
</div>
