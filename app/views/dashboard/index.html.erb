<% if current_user.owner? %>
  <%= render("admin_panel") %>
<% end %>

<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','user-shield', t('.title'), class: 'fa-fw h2 mb-0') %>
  </div>


  <div class="h5 mt-3 ml-3">
    <%= icon('fas','user-secret', t('.general.title'), class: 'fa-fw mb-0') %>
  </div>
  <div class="card-body mb-0 pb-3">
    <div class="row">
      <div class="col-md-3">
        <span class="font-weight-bold"><%= t('.general.ip') %></span>
      </div>
      <div class="col-md-3"><%= current_user.current_sign_in_ip %></div>
      <div class="col-md-3">
        <span class="font-weight-bold"><%= t('.general.last_access') %></span>
      </div>
      <div class="col-md-3"><%= l(current_user.last_sign_in_at, format: :short) %></div>
      <div class="col-md-3">
        <span class="font-weight-bold"><%= t('.general.mac_address') %></span>
      </div>
      <div class="col-md-3"><%= current_user.get_mac_by_ip %></div>
    </div>
  </div>

  <% if @rooms.present? %>
    <div class="h5 mt-3 ml-3">
      <%= icon('fas','user-secret', t('.computers.title'), class: 'fa-fw mb-0') %>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-2">
          <span class="font-weight-bold"><%= t('.computers.on') %></span>
        </div>
        <div class="col-md-2">132</div>
        <div class="col-md-2">
          <span class="font-weight-bold"><%= t('.computers.off') %></span>
        </div>
        <div class="col-md-2">321</div>
        <div class="col-md-2">
          <span class="font-weight-bold"><%= t('.computers.disconect') %></span>
        </div>
        <div class="col-md-2">54</div>
      </div>
    </div>

    <div class="h5 mt-3 ml-3">
      <%= icon('fas','user-secret', t('.rooms'), class: 'fa-fw mb-0') %>
    </div>
    <div class="card-body">
      <div class="row">
        <%= render(partial: 'dashboard/room', collection: @rooms) %>
      </div>
    </div>
  <% end %>
</div>
